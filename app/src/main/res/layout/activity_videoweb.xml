<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_app_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_videoweb_icBack_Img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/back_button_selector" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/webview_video_screen_height"
                android:background="#8000ACEE"
                android:padding="5dp">

                <WebView
                    android:id="@+id/wvVideo_VideoWeb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>

            <TextView
                android:id="@+id/activity_videoweb_pro_name_Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="pro_name"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/login_logo_height_width"
                android:layout_height="@dimen/login_logo_height_width"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_like" />

            <TextView
                android:id="@+id/activity_videoweb_desc_Txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="desc"
                android:textColor="@color/black"
                android:textSize="@dimen/default_text_size" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>